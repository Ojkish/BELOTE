<body>

<div class="app-container">
    <header>
        <h1>Belote Score</h1>
        <div class="total-score">
            <div class="team-score">
                <h2 contenteditable="true" id="name1">Nous</h2>
                <div class="big-number" id="total1">0</div>
            </div>
            <div class="team-score">
                <h2 contenteditable="true" id="name2">Eux</h2>
                <div class="big-number" id="total2">0</div>
            </div>
        </div>
    </header>

    <div class="controls">
        <div class="input-group">
            <div class="team-input">
                <label for="score1">Points Nous</label>
                <input type="number" id="score1" placeholder="0" min="0">
                <label class="belote-check">
                    <input type="checkbox" id="belote1"> Belote (+20)
                </label>
            </div>

            <div class="team-input">
                <label for="score2">Points Eux</label>
                <input type="number" id="score2" placeholder="162" min="0">
                <label class="belote-check">
                    <input type="checkbox" id="belote2"> Belote (+20)
                </label>
            </div>
        </div>

        <div class="actions">
            <button class="btn-add" onclick="addRound()">Valider la manche</button>
            <button class="btn-reset" onclick="resetGame()">Zéro</button>
        </div>
    </div>

    <ul class="history" id="historyList">
        <li class="empty-msg">Aucune manche jouée</li>
    </ul>
</div>

<script>
    // Variables d'état
    let globalScore1 = 0;
    let globalScore2 = 0;
    const MAX_POINTS = 162;

    // Références DOM
    const input1 = document.getElementById('score1');
    const input2 = document.getElementById('score2');
    const checkBelote1 = document.getElementById('belote1');
    const checkBelote2 = document.getElementById('belote2');
    
    const displayTotal1 = document.getElementById('total1');
    const displayTotal2 = document.getElementById('total2');
    const historyList = document.getElementById('historyList');

    // Calcul automatique : Quand on tape le score 1, le score 2 se calcule
    input1.addEventListener('input', function() {
        const val = parseInt(this.value);
        if (!isNaN(val) && val <= MAX_POINTS) {
            input2.value = MAX_POINTS - val;
        } else if (val > MAX_POINTS) {
            // Empêcher de dépasser 162
            this.value = MAX_POINTS;
            input2.value = 0;
        } else {
            input2.value = '';
        }
    });

    // Calcul inverse : Quand on tape le score 2
    input2.addEventListener('input', function() {
        const val = parseInt(this.value);
        // On ne force pas le calcul inverse strict ici pour permettre
        // les cas d'annonces (où le total fait plus de 162)
        // Mais on peut faire une suggestion basique si le champ 1 est vide
        if (!input1.value && !isNaN(val) && val <= MAX_POINTS) {
            input1.value = MAX_POINTS - val;
        }
    });

    function addRound() {
        // Récupération des valeurs
        let s1 = parseInt(input1.value) || 0;
        let s2 = parseInt(input2.value) || 0;

        // Ajout des belotes
        if (checkBelote1.checked) s1 += 20;
        if (checkBelote2.checked) s2 += 20;

        // Validation simple
        if (s1 === 0 && s2 === 0) return;

        // Mise à jour des totaux globaux
        globalScore1 += s1;
        globalScore2 += s2;

        // Mise à jour de l'affichage
        updateDisplay();
        addToHistory(s1, s2);

        // Reset des inputs pour la prochaine manche
        input1.value = '';
        input2.value = '';
        checkBelote1.checked = false;
        checkBelote2.checked = false;
        input1.focus();
    }

    function addToHistory(s1, s2) {
        // Supprimer le message "vide" si c'est la première entrée
        const emptyMsg = document.querySelector('.empty-msg');
        if (emptyMsg) emptyMsg.remove();

        const li = document.createElement('li');
        li.className = 'history-item';
        li.innerHTML = `
            <span>+${s1}</span>
            <span class="separator">-</span>
            <span>+${s2}</span>
        `;
        // Ajouter en haut de la liste
        historyList.prepend(li);
    }

    function updateDisplay() {
        displayTotal1.textContent = globalScore1;
        displayTotal2.textContent = globalScore2;
    }

    function resetGame() {
        if(confirm("Voulez-vous vraiment remettre les scores à zéro ?")) {
            globalScore1 = 0;
            globalScore2 = 0;
            updateDisplay();
            historyList.innerHTML = '<li class="empty-msg">Nouvelle partie</li>';
            input1.value = '';
            input2.value = '';
            checkBelote1.checked = false;
            checkBelote2.checked = false;
        }
    }
</script>

</body>
</html>
